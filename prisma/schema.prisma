datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model system_panda_plugins {
  id          Int     @id @default(autoincrement())
  title       String  @unique
  description String
  author      String
  version     String
  sourceCode  String
  active      Boolean
}

model system_panda_sessions {
  id               String    @id @default(cuid())
  data             Json?
  created_at       DateTime? @default(now())
  updated_at       DateTime? @updatedAt
  relation_users   users?    @relation(fields: [relation_usersId], references: [id])
  relation_usersId Int?      @map("relation_users")
}

model student {
  id                 String      @id @default(uuid())
  name               String?
  relation_classroom classroom[]
}

model classroom {
  id               Int       @id @default(autoincrement())
  name             String
  relation_student student[]
}

model song {
  id               Int    @id @default(autoincrement())
  title            String
  relation_album   album? @relation(fields: [relation_albumId], references: [id])
  relation_albumId Int?   @map("relation_album")
}

model album {
  id            Int       @id @default(autoincrement())
  relation_song song[]
  year          Int
  title         String    @unique
  dateCreated   DateTime? @default(now())
  mJson         Json?     @default("{\"hello\":\"world\"}")

  @@index([title])
}

model users {
  id               Int                     @id @default(autoincrement())
  relation_session system_panda_sessions[]
  user_type        String
  email            String                  @unique
  password         String

  @@index([email])
}
