{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/app.ts", "src/app.js"],
  "exclude": ["src/**/*.spec.ts", "./node_modules"],
  "ts-node": {
    "esm": true
  }
}
